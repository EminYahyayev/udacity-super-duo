<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.ewintory.footballscores"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Mistake found: there was [android:maxSdkVersion="22"] tag in INTERNET permission-->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ScoresApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/FootballTheme">

        <activity
            android:name=".ui.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.AboutActivity"
            android:label="@string/title_about"
            android:parentActivityName=".ui.activity.MainActivity" />

        <provider
            android:name=".provider.ScoresProvider"
            android:authorities="com.ewintory.footballscores"
            android:exported="false" />

        <service android:name=".service.FetchService" />

    </application>

</manifest>
