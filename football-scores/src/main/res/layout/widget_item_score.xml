<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/content_padding_normal">

    <TextView
        android:id="@+id/widget_item_league"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/primary_text"
        tools:text="Championship league" />

    <TextView
        android:id="@+id/widget_item_matchday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/element_spacing_normal"
        android:drawableLeft="@drawable/ic_directions_run_black_18dp"
        android:drawablePadding="@dimen/keyline_1_minus_8dp"
        android:drawableStart="@drawable/ic_directions_run_black_18dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/secondary_text"
        tools:text="Match day: 2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/element_spacing_normal"
        android:baselineAligned="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/widget_item_home_crest"
                android:layout_width="@dimen/widget_score_item_crest_size"
                android:layout_height="@dimen/widget_score_item_crest_size"
                android:layout_gravity="center"
                android:contentDescription="@string/home_team_crest"
                tools:src="@android:color/darker_gray" />

            <TextView
                android:id="@+id/widget_item_home_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/body_text_2"
                tools:text="Barcelona" />

        </LinearLayout>

        <TextView
            android:id="@+id/widget_item_score"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/accent"
            tools:text="6 - 1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/widget_item_away_crest"
                android:layout_width="@dimen/widget_score_item_crest_size"
                android:layout_height="@dimen/widget_score_item_crest_size"
                android:layout_gravity="center"
                android:contentDescription="@string/away_team_crest"
                tools:src="@android:color/darker_gray" />

            <TextView
                android:id="@+id/widget_item_away_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/body_text_2"
                tools:text="Manchester" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>